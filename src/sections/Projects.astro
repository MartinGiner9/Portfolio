---
import Angular from "../icons/Angular.astro";
import Symfony from "../icons/Symfony.astro";
import ZK from "../icons/ZK.astro";
import Card from "../components/Card.astro";
const TAGS = {
    ANGULAR: {
        name: "Angular",
        class: "bg-red text-black",
        icon: Angular,
    },
    SYMFONY: {
        name: "Symfony CSS",
        class: "bg-white text-black",
        icon: Symfony,
    },
    ZK: {
        name: "ZK",
        class: "bg-white text-black",
        icon: ZK,
    },


}
const PROJECTS = [
    {
        title: "Escuela de hostelería",
        description:
            "Web para la escuela de hostelería de la ciudad de Múrcia. Desarrollada con Angular.js y Symfony. Este proyecto se llevo a cabo para el proyecto final de grado. En el cual se integro una pasarela de pago para poder realizar reservas mediante tarjeta de credito con Stripe, una zona de administración privada para poder gestionar los dias los cuales se pueden reservas las horas las cuales se podrian realizar las reservas, los clientes y las reservas realizadas dando tambien la opcion de si una reserva queria ser cancelada y se habia pagado con tarjeta realizar la devolucion del dinero.",
        link: "https://proyectohosteleria.fun/",
        github: "s",
        image: "projects/proyectoHosteleria.webp",
        altImage: "Fotografía de la web de la escuela de hostelería",
        tags: [TAGS.ANGULAR, TAGS.SYMFONY],
    }
]
---
<ul>
    {
        PROJECTS.map((item) =>
            (
                    <li>
                        <Card {...item}/>
                    </li>
            )
        )
    }
</ul>