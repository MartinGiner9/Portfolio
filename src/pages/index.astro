---
import Layout from "../layouts/Layout.astro";

import Hero from "../sections/Hero.astro";
import Experience from "../sections/Experience.astro";
import Section from "../components/Section.astro";
import Briefcase from "../icons/Briefcase.astro";
import Projects from "../sections/Projects.astro";
import Code from "../icons/Code.astro";
---

<Layout
        title="Martín Giner Navarro | Desarrollador Web con 1 año de experiencia"
        description="Contrata a Martín para crear tu aplicación web o móvil. Desarrollador Web. Especializado en crear aplicaciones.">
    <Section id="Hero" class="pl-3 md:pl-0 py-12 md:py-36 scroll-m-20 w-full mx-auto lg:max-w-5xl">
        <Hero/>
    </Section>
    <Section id="experiencia" class="px-3 md:px-0 pb-4 md:pb-24 scroll-m-20 w-full mx-auto lg:max-w-5xl">
        <h2 class="mb-6 text-3xl font-semibold gap-x-3">
            <Briefcase class="w-8 h-8 inline-block mb-2"/>
            Experiencia laboral
        </h2>
        <Experience/>
    </Section>
    <Section id="proyectos" class="px-3 md:px-0 pb-4 md:pb-24 scroll-m-20 w-full mx-auto lg:max-w-5xl">
        <h2 class="mb-6 text-3xl font-semibold gap-x-3">
            <Code class="w-8 h-8 inline-block mb-2"/>
            Proyectos
        </h2>
        <Projects/>
    </Section>
</Layout>

