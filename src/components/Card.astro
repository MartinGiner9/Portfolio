---
import LinkButton from "./LinkButton.astro";
import Github from "../icons/Github.astro";
import Hyperlink from "../icons/Hyperlink.astro";
interface Props {
    title: string
    description: string
    link?: string
    image?: string
    altImage?: string
    github?: string
    tags?: string[] | string
}

const {
    title, description, link, image, altImage, github, tags
} = Astro.props
---

<div class="flex flex-col items-center border rounded-lg shadow md:flex-row border-gray-700 bg-gray-800 hover:bg-gray-700">
    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:max-w-96 md:rounded-none md:rounded-s-lg"
         src={image} alt={altImage}>
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-white">{title}</h5>
        <p class="mb-3 font-normal text-gray-400">{description}</p>
        <div>
            {
                github && (
                            <LinkButton href={github}>
                                <Github width="28" height="28"/>
                                Github
                            </LinkButton>
                )
            }
            {
                link && (
                            <LinkButton href={link}>
                                <Hyperlink/>
                                Preview
                            </LinkButton>
                )
            }
        </div>
    </div>
</div>

