---
import LinkButton from "./LinkButton.astro";
import Github from "../icons/Github.astro";
import Hyperlink from "../icons/Hyperlink.astro";
interface Props {
    title: string
    description?: string
    shortDescription?: string
    link?: string
    image?: string
    altImage?: string
    github?: string
    tags?: any[]
}

const {
    title, description, link, image, altImage, github, tags, shortDescription
} = Astro.props
---

<div class="flex flex-col items-center border rounded-lg shadow md:flex-row border-gray-700 bg-gray-900">
    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:max-w-96 md:rounded-none md:rounded-s-lg"
         src={image} alt={altImage}>
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-white">{title}</h5>
        <div>
            <ul class="flex flex-row mb-2 gap-x-2">

                {tags && (tags.map((tag: any) => (
                        <li>
                          <span
                                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 items-center `}
                          >
                            <tag.icon/>
                              {tag.name}
                          </span>
                        </li>
                )))}
            </ul>
        </div>
        <p class="mb-3 font-normal text-white">{shortDescription}</p>
        <div>
            {
                github && (
                            <LinkButton href={github}>
                                <Github width="28" height="28"/>
                                Github
                            </LinkButton>
                )
            }
            {
                link && (
                            <LinkButton href={link}>
                                <Hyperlink width="28" height="28"/>
                                Preview
                            </LinkButton>
                )
            }
        </div>
    </div>
</div>

